{
  "name": "LewsNetter",
  "description": "An e-mail marketing application.",
  "repository": "https://github.com/bborn/lewsnetter",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "RAILS_ENV": "production",
    "SECRET_KEY_BASE": {
      "description": "A secret",
      "generator": "secret",
      "required": true
    },
    "DEVISE_PEPPER": {
      "description": "A secret",
      "generator": "secret",
      "required": true
    },
    "DEVISE_SECRET_KEY": {
      "description": "A secret",
      "generator": "secret",
      "required": true
    },
    "MAIL_HOST": {
      "description": "From address to use when sending email",
      "value": "",
      "required": false
    },
    "SES_SECRET_KEY": {
      "description": "Your SES secret key",
      "value": "",
      "required": false
    },
    "SES_ACCESS_KEY": {
      "description": "Your SES access key",
      "value": "",
      "required": false
    },
    "SES_SMTP_PASSWORD": {
      "description": "Your SES smtp password",
      "value": "",
      "required": false
    },
    "SES_SMTP_USERNAME": {
      "description": "Your SES smtp username",
      "value": "",
      "required": false
    }
  },
  "addons": [
    "heroku-postgresql",
    "memcachier:dev",
    "newrelic:wayne",
    "redistogo:nano"
  ]
}
