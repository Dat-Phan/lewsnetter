#email_content
  =raw @template_content

-content_for :on_ready do
  :plain
    $(function() {
      window.editor = new Editor("#email_content .editable");
      window.editor.initCkeditor({readOnly: #{params[:editable].blank?}})
    });


  :plain
    $(function() {
      $('#email_content').click(function(e){
        if($(e.target).hasClass('editable')){
        } else {
          e.preventDefault();
          e.stopPropagation();
          return false;
        }
      })
    });
